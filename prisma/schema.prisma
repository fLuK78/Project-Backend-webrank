generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  name          String
  email         String         @unique
  password      String
  phone         String?
  image         String?
  role          String         @default("Player")
  
  bio           String?        @db.Text
  location      String?
  socialLink    String?

  registrations Registration[] @relation("PlayerRegistrations")
  approvedTasks Registration[] @relation("AdminApprover")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Competition {
  id            Int            @id @default(autoincrement())
  name          String
  date          DateTime
  description String?  @db.Text
  maxPlayer     Int 
  prize       String?      
  rules       String?  @db.Text         
  detail        String?        @db.Text
  registrations Registration[]
  image String? @db.Text
  createdAt     DateTime       @default(now())
}

model Registration {
  id     Int    @id @default(autoincrement())
  status String @default("pending")

  user   User @relation("PlayerRegistrations", fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  competition   Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  competitionId Int

  payment Payment?

  adminId  Int?
  approver User? @relation("AdminApprover", fields: [adminId], references: [id], onDelete: SetNull)

  adminNote String?  @db.Text
  createdAt DateTime @default(now())

  @@unique([userId, competitionId])
}

model Payment {
  id             Int          @id @default(autoincrement())
  amount         Float
  method         String
  registration   Registration @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  registrationId Int          @unique
  createdAt      DateTime     @default(now())
}
